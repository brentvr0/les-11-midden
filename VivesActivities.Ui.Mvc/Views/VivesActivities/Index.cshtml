@model IList<VivesActivity>
@{
    ViewData["Title"] = "Manage Activies";
}

<h1>@ViewData["Title"]</h1>

<a asp-action="Create" class="btn btn-primary">New Activity</a>

<table class="table table-dark table-striped">
    <thead>
    <tr>
        <th>Name</th>
        <th>Location</th>
        <th>Type</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var activity in Model)
    {
        <partial name="VivesActivityRowPartial" model="activity"/>
    }
    </tbody>
</table>

@section Modals
{
    <!--Modal-->
    <div class="modal fade" id="DeleteModal" tabindex="-1" aria-labelledby="DeleteModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="DeleteModalLabel">Delete Location</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete this location?</p>
                </div>
                <div class="modal-footer">
                    <form class="modal-footer" asp-action="Delete">
                        <input type="hidden" name="Id" />
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                        <button type="button" class="btn btn-primary">Yes</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts 
{
    <script>
        $(function () {

        });
    </script>
}